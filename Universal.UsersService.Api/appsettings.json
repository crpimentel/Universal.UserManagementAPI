{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "InMemoryDatabaseName": "UserDb"
  ,
  "Validation": {
    "EmailRegex": "^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$",
    "PasswordRegex": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+\-={}:;<>?,.]).{8,}$"
  },
  "Jwt": {
    "Key": "SuperSecretKeyForJwtToken123!@#",
    "Issuer": "Universal.UsersService.Api",
    "Audience": "Universal.UsersService.Api.Users",
    "ExpiresInMinutes": 60
  }
}
